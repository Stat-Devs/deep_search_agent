# Deep Research System - Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Google Gemini Configuration  
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Tavily Web Intelligence API
TAVILY_API_KEY=your_tavily_api_key_here

# System Configuration
LOG_LEVEL=INFO
MAX_RETRIES=3
TIMEOUT_SECONDS=60

# Application Configuration
HOST=0.0.0.0
PORT=8000

# Business Context (StatDevs)
COMPANY_NAME=StatDevs
COMPANY_DESCRIPTION=AI-powered data analytics solutions provider

# Optional: Custom service configurations
# OPENAI_BASE_URL=https://api.openai.com/v1
# GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/